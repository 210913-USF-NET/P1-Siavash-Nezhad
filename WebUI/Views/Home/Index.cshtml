@{
    ViewData["Title"] = "Home Page";
    string status = (string)ViewData["status"];
    Context.Response.Cookies.Append("checkoutMsg", "Checkout Successful.");
}

@if (status == "user")
{
    <partial name="_UserIndex" view-data="ViewData" />
}

@if (status == "guest" || status == null)
{
    <partial name="_GuestIndex" view-data="ViewData" />
}

@if (status == "admin")
{
    <partial name="_AdminIndex" view-data="ViewData" />
}